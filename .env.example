APP_NAME=PisoPrint
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
PRINTING_LOGGER=stack

# Database - Use SQLite for simple local dev, or mysql with Docker
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pisoprint
DB_USERNAME=pisoprint
DB_PASSWORD=pisoprint

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache - Use database for simple dev
CACHE_STORE=database

# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Docker Configuration (for MySQL container)
FORWARD_DB_PORT=3306

# Hardware Configuration (set *_MOCK_ENABLED=true for development without hardware)
ESP32_ID=ESP32_COIN_001
ESP32_SERIAL_PORT=/dev/ttyUSB0
ESP32_BAUD_RATE=115200
ESP32_HEARTBEAT_TIMEOUT=30
ESP32_MOCK_ENABLED=true

# Printer Configuration
PRINTER_NAME=Brother_DCP-T720DW
PRINTER_MOCK_ENABLED=true

# Printing Driver Configuration (CUPS)
PRINTING_DRIVER=cups
PRINTING_DEFAULT_PRINTER_ID=Brother_DCP_T720DW_USB
CUPS_SERVER_IP=localhost
CUPS_SERVER_PORT=631
CUPS_SERVER_USERNAME=pisoprint
CUPS_SERVER_PASSWORD=pisoprint
CUPS_SERVER_SECURE=false

# Printing Prices (in Pesos)
PRICE_PER_PAGE_BW=2.00
PRICE_PER_PAGE_GRAYSCALE=3.00
PRICE_PER_PAGE_COLOR=5.00

# Print Job Limits
MAX_FILE_SIZE=52428800
MAX_COPIES=100
MAX_PAGES_PER_JOB=500
PAPER_SIZE=Letter

# USB Configuration
USB_MOUNT_POINT=/media/usb

# WiFi Hotspot Configuration
WIFI_SSID=PisoPrint_Kiosk
WIFI_PASSWORD=PisoPrint2025
WIFI_IP=192.168.4.1
WIFI_DHCP_RANGE=192.168.4.100,192.168.4.200

# Kiosk Domain Configuration (for mDNS/Avahi)
KIOSK_DOMAIN=pisoprint.local
